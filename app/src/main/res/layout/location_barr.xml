<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="@dimen/toolbar_size"
    card_view:cardElevation="4dp"
    card_view:cardMaxElevation="6dp"
    card_view:contentPadding="5dp"
    android:elevation="12dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ImageView
            android:id="@+id/menu_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:src="@drawable/ic_sort_black_24dp" />
        <RelativeLayout
            android:id="@+id/add_text"
            android:layout_width="match_parent"
            android:layout_toRightOf="@+id/menu_icon"
            android:layout_height="match_parent">



            <com.com.kartify_fonts.NormalTextView
                android:id="@+id/city_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="@dimen/mall_list_city_name_margin_top"
                android:text="Bengaluru"
                android:textColor="@color/black"
                android:textSize="@dimen/location_barr_city_name_size" />

            <ImageView
                android:id="@+id/dropImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="@dimen/mall_list_city_name_margin_top"
                android:layout_toRightOf="@+id/city_name"
                android:src="@drawable/ic_keyboard_arrow_down_black_24dp" />

            <com.com.kartify_fonts.LightTextView
                android:id="@+id/macAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/city_name"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="0dp"
                android:text="Btm 2nd stage "
                android:textColor="#BDBDBD"
                android:singleLine="true"
                android:textSize="@dimen/location_barr_macAddress_size"

                />
        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>