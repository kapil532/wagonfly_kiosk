<?xml version="1.0" encoding="utf-8"?>

  <RelativeLayout
      xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
      android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
      android:background="@mipmap/back">


  <kartify.ezetap.printer.CheckView
      android:id="@+id/check"
      android:layout_width="200dp"
      android:layout_height="200dp"
      android:layout_centerInParent="true"
      app:checkView_strokeColor="@color/green"
      app:checkView_strokeWidth="20dp"
      />


    <com.com.kartify_fonts.NormalTextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/check"
        android:text="Please wait your bill is on the way.. "
        android:gravity="center"
        android:textSize="25sp"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:visibility="invisible"
        android:layout_centerHorizontal="true"/>


  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:weightSum="2"
      android:layout_marginTop="10dp"
      android:layout_below="@id/text">


    <Button
        android:id="@+id/yes_print"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_weight="1"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp"
        android:background="@color/colorPrimaryDark"
        android:padding="25dp"
        android:text="Print Bill"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:visibility="visible"
        android:layout_margin="10dp"/>

    <Button
        android:id="@+id/no_print"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_weight="1"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp"
        android:background="@color/colorPrimaryDark"
        android:padding="25dp"
        android:text="Don't"
        android:layout_margin="10dp"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:visibility="visible" />


  </LinearLayout>


</RelativeLayout>