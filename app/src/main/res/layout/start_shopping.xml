<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="4">

        <RelativeLayout
            android:id="@+id/back_image_location"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.3"
            >
            <ImageView
                android:id="@+id/image_back"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/dummy"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_margin="10dp"
                android:padding="9dp"
                android:background="@drawable/rounded_corner_transparent"
                android:orientation="vertical">

                <com.com.kartify_fonts.NormalTextView
                    android:id="@+id/place_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="JAYA NAGAR"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <com.com.kartify_fonts.NormalTextView
                    android:id="@+id/add"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="4th block"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </LinearLayout>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".4"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="2">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1.1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingLeft="16dp">

                    <com.com.kartify_fonts.LightTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="You are at:"
                        android:textColor="@color/dark_gray_color"
                        android:singleLine="true"
                        android:textSize="16sp" />

                    <com.com.kartify_fonts.NormalTextView
                        android:id="@+id/at_position"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="VAN HEUSEN"
                        android:singleLine="true"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20sp" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/start_shopping_lay"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".9"
                    android:background="@color/colorAccent">

                    <com.com.kartify_fonts.NormalTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="START SHOPPING"

                        android:textColor="@color/white"
                        android:textSize="18sp" />


                </LinearLayout>
            </LinearLayout>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.1">

            <com.com.kartify_fonts.NormalTextView
                android:id="@+id/promo_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                android:text="Select a Promo Offer"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/promo_text"
                android:layout_margin="16dp"
                android:background="@drawable/dotted_border"
                >

                <ListView
                    android:id="@+id/list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="12dp"
                    android:divider="@color/white"
                    android:dividerHeight="4dp"
                    ></ListView>


            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".2"
            android:background="@color/white">

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lightgray" />

            <LinearLayout
                android:id="@+id/change_store_lay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/view"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:orientation="horizontal">

                <com.com.kartify_fonts.NormalTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Not the right store?"
                    android:textColor="@color/lightgray"
                    android:textSize="16sp" />

                <com.com.kartify_fonts.NormalTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Change Store"
                    android:textColor="@color/black"
                    android:textSize="16sp" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>