<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--  <include layout="@layout/toolbar_with_logo_home" />-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/back"
                android:orientation="vertical"
                android:weightSum="5">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="4.3"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="19dp"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                        <com.com.kartify_fonts.NormalTextView
                            android:id="@+id/cart_shopping"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/start_shopping"
                            android:textColor="#000"
                            android:textSize="12sp" />


                    </LinearLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:descendantFocusability="blocksDescendants">


                        <com.com.kartify_fonts.LightTextView
                            android:id="@+id/start_shopping_frame"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text=""
                            android:textColor="#000"
                            android:textSize="@dimen/start_shopping_font_size" />

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/recycler_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="18dp"
                            android:layout_marginRight="8dp"
                            android:scrollbars="none" />
                    </FrameLayout>

                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginRight="18dp"
                    android:layout_marginLeft="18dp"
                    android:layout_weight=".4"
                    >
            <kartify.ezetap.ZigzagView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:zigzagBackgroundColor="#FFCDD2"
                app:zigzagElevation="6dp"
                app:zigzagHeight="6dp"
                app:zigzagShadowAlpha="0.9"
                app:zigzagPaddingContent="2dp"
                app:zigzagSides="top|bottom">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <LinearLayout
                        android:id="@+id/lay_total"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="13dp"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <com.com.kartify_fonts.LightTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"

                            android:layout_gravity="right"
                            android:layout_marginRight="25dp"
                            android:layout_weight="2"
                            android:gravity="right"
                            android:text="SUBTOTAL:"
                            android:textColor="#000"
                            android:textSize="17sp" />

                        <com.com.kartify_fonts.LightTextView
                            android:id="@+id/total_price"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginRight="12dp"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text=""
                            android:textColor="#000"
                            android:textSize="17sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lay_tax"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lay_total"
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <com.com.kartify_fonts.LightTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginRight="25dp"
                            android:layout_weight="2"
                            android:gravity="right"
                            android:text="TAX:"
                            android:textColor="#000"
                            android:textSize="16sp" />

                        <com.com.kartify_fonts.LightTextView
                            android:id="@+id/tax"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/total_price"
                            android:layout_alignParentRight="true"
                            android:layout_gravity="right"
                            android:layout_marginRight="12dp"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lay_tax"
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <com.com.kartify_fonts.LightTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tax"
                            android:layout_gravity="right"
                            android:layout_marginRight="25dp"
                            android:layout_weight="2"
                            android:gravity="right"
                            android:text="GRAND TOTAL:"
                            android:textColor="#000"
                            android:textSize="17sp" />

                        <com.com.kartify_fonts.LightTextView
                            android:id="@+id/grant_total"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tax"
                            android:layout_gravity="right"
                            android:layout_marginTop="4dp"
                            android:layout_marginRight="12dp"
                            android:layout_weight="1"
                            android:gravity="right"


                            android:text=""
                            android:textColor="#000"
                            android:textSize="17sp" />
                    </LinearLayout>


                </RelativeLayout>
            </kartify.ezetap.ZigzagView>
                </RelativeLayout>
                <Button
                    android:id="@+id/gotocheckout"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".3"
                    android:text="Go To Checkout"
                    android:layout_margin="4dp"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:background="@color/colorPrimary"
                   >

                </Button>

            </LinearLayout>





        </RelativeLayout>
    </LinearLayout>


</android.support.v4.widget.DrawerLayout>