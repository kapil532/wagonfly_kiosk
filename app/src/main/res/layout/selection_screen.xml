<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/main_lay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <include layout="@layout/toolbar_with_shadow_with_big_title" />

            <include layout="@layout/store_description_view" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <com.com.kartify_fonts.NormalTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Please Choose Shooping Method"
                    android:textColor="#000"
                    android:textSize="14sp" />

                <View
                    android:layout_width="120dp"
                    android:layout_height="1dp"
                    android:layout_marginBottom="40dp"
                    android:layout_marginTop="3dp"
                    android:background="@color/colorPrimaryDark"></View>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <com.com.kartify_fonts.NormalTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="26dp"
                    android:layout_marginTop="16dp"
                    android:text="Please Choose Shopping Method"
                    android:textColor="#000"
                    android:textSize="14sp" />
                <!-- <android.support.v7.widget.CardView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    card_view:cardElevation="4dp"
                    card_view:cardMaxElevation="6dp"
                    android:layout_margin="16dp"
                    android:elevation="12dp">-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/scanner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/selector_items">


                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_margin="20dp"
                            android:src="@drawable/ic_barcode"
                            tools:layout_editor_absoluteX="0dp"
                            tools:layout_editor_absoluteY="0dp" />


                    </RelativeLayout>

                    <com.com.kartify_fonts.NormalTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="4dp"
                        android:gravity="center_horizontal"
                        android:text="Scanner"
                        android:textColor="#000"
                        android:textSize="14sp" />
                </LinearLayout>
                <!--  <RelativeLayout
                android:id="@+id/scanner"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/selection_screen_scan_image_height"
                android:background="@drawable/scanner"
                android:orientation="horizontal"
                android:gravity="center"
              >-->


                <!-- </RelativeLayout>-->
                <!-- </android.support.v7.widget.CardView>-->

                <RelativeLayout
                    android:id="@+id/bluetooth_scanne"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:background="@drawable/rounded_corner"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="10dp"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/imageView123"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        android:src="@drawable/scabber_blue"
                        tools:layout_editor_absoluteX="0dp"
                        tools:layout_editor_absoluteY="346dp" />

                    <com.com.kartify_fonts.BoldTextView
                        android:id="@+id/textView123"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginLeft="19dp"
                        android:layout_marginStart="19dp"
                        android:layout_toEndOf="@+id/imageView123"
                        android:layout_toRightOf="@+id/imageView123"
                        android:text="Self Checkout"
                        android:textColor="#000"
                        android:textSize="18dp" />


                </RelativeLayout>
                <!-- <android.support.v7.widget.CardView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    card_view:cardElevation="4dp"
                    card_view:cardMaxElevation="6dp"
                    android:layout_margin="16dp"
                    android:elevation="12dp">
                <RelativeLayout
                    android:id="@+id/kart"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/selection_screen_scan_image_height"

                    android:background="@drawable/smart_cart"
                    android:gravity="center"
                    android:orientation="horizontal">


                </RelativeLayout>
                </android.support.v7.widget.CardView>-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/kart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/selector_items">


                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_margin="20dp"
                            android:src="@drawable/ic_shopping_cart_black_24dp" />


                    </RelativeLayout>

                    <com.com.kartify_fonts.NormalTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="4dp"
                        android:gravity="center_horizontal"
                        android:text="Cart"
                        android:textColor="#000"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>